{
    "include": ["src"],
    "exclude": ["node_modules"],
    "compilerOptions": {
        "target": "es5",
        "module": "commonjs",
        "declaration": true, // Генерирует .d.ts файлы (объявления типов)
        "strict": true, // Включает строгие типовые проверки
        "sourceMap": false,
        "rootDir": "./src",
        "outDir": "./distribution",
        "lib": [
            "es2018",
            "dom"
        ]
    }
}
